const int motorPin = 3;   // PWM Pin for motor (ต้องรองรับ PWM)

void setup() {
  Serial.begin(9600);
  pinMode(motorPin, OUTPUT);
  analogWrite(motorPin, 0); // stop motor at start
  Serial.println("Motor ready! Send 0-9 to control speed.");
}

void loop() {
  if (Serial.available()) {

    char ch = Serial.read();

    if (isDigit(ch)) {
      int speed = map(ch - '0', 0, 9, 0, 255);

      analogWrite(motorPin, speed);

      Serial.print("Speed PWM = ");
      Serial.println(speed);

    } else {
      Serial.print("Unexpected character: ");
      Serial.println(ch);
    }
  }
}